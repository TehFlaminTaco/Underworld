<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Underworld.ViewModels"
    xmlns:local="using:Underworld.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dg="using:Avalonia.Controls"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Underworld.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/underworld-logo.ico"
    Width="1100" Height="700"
    Title="Underworld">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Border.Card">
            <Setter Property="Background" Value="#252931"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#333842"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style Selector="TextBlock.SectionHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFB347"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style Selector="Button.Primary">
            <Setter Property="Background" Value="#FF4B2B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF4B2B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,6"/>
        </Style>
    </Window.Styles>

    <DockPanel Margin="8" LastChildFill="True">
        <!-- Application menu bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Export Profile" Command="{Binding ExportProfileCommand}" CommandParameter="{Binding $parent[Window]}" />
                <MenuItem Header="_Import Profile" Command="{Binding ImportProfileCommand}" CommandParameter="{Binding $parent[Window]}" />
                <Separator />
                <MenuItem Header="Clear WAD Cache" Click="OnClearCacheClicked" />
                <Separator />
                <MenuItem Header="E_xit" Click="OnExitClicked" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="OnAboutClicked" />
            </MenuItem>
        </Menu>

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" Padding="8,6" Background="#1A1D22">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                <Button Content="Manage Data Folders" Click="OnManageDataFoldersClicked" />

                <TextBlock Grid.Column="1"
                           Margin="8,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="#B0B6C0"
                           Text="" />

                <Button Grid.Column="2"
                        Classes="Primary"
                        Content="Run Game ▶"
                        Click="OnRunGameClicked" />
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid RowDefinitions="Auto,*" RowSpacing="8" Background="#1A1D22">
            <!-- Top: Engine / IWAD / Profile -->
            <Grid ColumnDefinitions="2*,2*,1.5*" ColumnSpacing="8">
                <!-- 1. Engine -->
                <Border Classes="Card">
                    <StackPanel>
                        <TextBlock Text="1. Engine" Classes="SectionHeader" />
                        <ListBox Name="ExecutablesList" 
                                 Items="{Binding Executables}"
                                 SelectedItem="{Binding SelectedExecutable}"
                                 SelectionMode="Single"
                                 Height="160">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="4">
                                        <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                                        <TextBlock Text="{Binding Path}" Foreground="#FFBFBFBF" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Rename" Click="OnContextRenameClicked"/>
                                    <MenuItem Header="Open File Location" Click="OnContextOpenLocationClicked"/>
                                    <MenuItem Header="Delete" Click="OnContextDeleteClicked"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,8,0,0">
                            <Button Content="Add Engine..." 
                                    Command="{Binding AddExecutablesCommand}" 
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:MainWindow}}" />
                            <Button Content="Remove"
                                    Command="{Binding RemoveSelectedExecutableCommand}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 2. Base Game (IWAD) -->
                <Border Grid.Column="1" Classes="Card">
                    <StackPanel>
                        <TextBlock Text="2. Base Game (IWAD)" Classes="SectionHeader" />
                        <ListBox Name="IWADsList"
                                 Items="{Binding IWADs}"
                                 SelectedItem="{Binding SelectedIWAD}"
                                 SelectionMode="Single"
                                 Height="160">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="4">
                                        <TextBlock Text="{Binding DisplayName}" Foreground="White"/>
                                        <TextBlock Text="{Binding Path}" Foreground="#FFBFBFBF" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- 3. Profile -->
                <Border Grid.Column="2" Classes="Card">
                    <StackPanel>
                        <TextBlock Text="3. Profile" Classes="SectionHeader" />
                        <ListBox Name="ProfilesList"
                                 Items="{Binding Profiles}"
                                 SelectedItem="{Binding SelectedProfile}"
                                 SelectionMode="Single"
                                 Height="160">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="White" Margin="4"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                            <Button Content="New" Click="OnNewProfileClicked" />
                            <Button Content="Remove" Click="OnRemoveProfileClicked" />
                            <CheckBox Name="ProfileLockedCheckbox" 
                                      Content="Locked" 
                                      IsChecked="{Binding CurrentProfileLocked, Mode=TwoWay}" 
                                      IsEnabled="false" 
                                      VerticalAlignment="Center"
                                      Margin="4,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Middle: WAD lists -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto,*"
                  ColumnSpacing="8">
                <!-- Available WADs -->
                <Border Classes="Card">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <TextBlock Text="Available WADs" Classes="SectionHeader" />
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="4" Margin="0,0,0,6">
                            <TextBox Name="WADFilterTextBox1" 
                                     Watermark="Filter..." 
                                     TextChanged="OnAvailableWADsFilterTextChanged"/>
                            <Button Grid.Column="1" Content="Clear" Click="OnClearAvailableWADsFilterClicked"/>
                        </Grid>

                        <dg:DataGrid Name="WADsDataGrid1" Grid.Row="2"
                                  ItemsSource="{Binding FilteredAvailableWads}"
                                  SelectionMode="Extended"
                                  AutoGenerateColumns="False"
                                  Background="#FF3F3F46"
                                  Foreground="White"
                                  RowBackground="#FF3F3F46"
                                  BorderThickness="1"
                                  BorderBrush="#FF555555"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  DoubleTapped="OnAvailableWADsDoubleClicked">
                            <dg:DataGrid.Columns>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="WAD" Binding="{Binding DisplayName}" Width="2*"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Maps" Binding="{Binding HasMaps}" Width="Auto"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Path" Binding="{Binding Path}" Width="3*"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                    </Grid>
                </Border>

                <!-- Transfer buttons -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <Button Name="AddWadsButton" 
                            Content="  >>  " 
                            Width="60"
                            Click="OnAddWadsClicked"/>
                    <Button Name="RemoveWadsButton" 
                            Content="  <<  " 
                            Width="60"
                            Click="OnRemoveWadsClicked"/>
                </StackPanel>

                <!-- Selected WADs -->
                <Border Grid.Column="2" Classes="Card">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <TextBlock Text="Selected WADs" Classes="SectionHeader" />
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="4" Margin="0,0,0,6">
                            <TextBox Name="WADFilterTextBox2" 
                                     Watermark="Filter..." 
                                     TextChanged="OnSelectedWADsFilterTextChanged"/>
                            <Button Grid.Column="1" Content="Clear" Click="OnClearSelectedWADsFilterClicked"/>
                        </Grid>

                        <dg:DataGrid Name="WADsDataGrid2" Grid.Row="2"
                                  ItemsSource="{Binding FilteredSelectedWads}"
                                  SelectionMode="Extended"
                                  AutoGenerateColumns="False"
                                  Background="#FF3F3F46"
                                  Foreground="White"
                                  RowBackground="#FF3F3F46"
                                  BorderThickness="1"
                                  BorderBrush="#FF555555"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  DoubleTapped="OnSelectedWADsDoubleClicked">
                            <dg:DataGrid.Columns>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="WAD" Binding="{Binding DisplayName}" Width="2*"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Maps" Binding="{Binding HasMaps}" Width="Auto"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Path" Binding="{Binding Path}" Width="3*"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>

