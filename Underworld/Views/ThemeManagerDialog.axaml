<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Underworld.ViewModels"
        x:Class="Underworld.Views.ThemeManagerDialog"
        x:DataType="vm:ThemeManagerViewModel"
        Title="Manage Theme"
        Width="420"
        Height="320"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource CardBackgroundBrush}">

    <Window.Styles>
        <Style Selector="ListBox#ThemeList ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="ListBox#ThemeList ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBox#ThemeList ListBoxItem:selected Border#ThemeItemCard">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentOrangeBrush}"/>
        </Style>
        <Style Selector="ListBox#ThemeList ListBoxItem:pointerover Border#ThemeItemCard">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentOrangeBrush}"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto" Margin="12">
        <TextBlock Grid.Row="0"
                   Text="Select a theme to apply"
                   FontWeight="Bold"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   Margin="0,0,0,8"/>

        <ListBox x:Name="ThemeList"
                 Grid.Row="1"
                 ItemsSource="{Binding Themes}"
                 SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                 Background="{DynamicResource ControlBackgroundBrush}"
                 Foreground="{DynamicResource PrimaryTextBrush}"
                 BorderBrush="{DynamicResource CardBorderBrush}"
                 BorderThickness="1"
                 DoubleTapped="OnThemeDoubleTapped">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="vm:ThemeOptionViewModel">
                    <Border x:Name="ThemeItemCard"
                            Background="{DynamicResource CardBackgroundBrush}"
                            BorderBrush="{DynamicResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,2">
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <Border Background="{DynamicResource AccentOrangeBrush}"
                                        Padding="6,0"
                                        CornerRadius="10"
                                        IsVisible="{Binding IsCurrent}">
                                    <TextBlock Text="Current"
                                               Foreground="{DynamicResource WindowBackgroundBrush}"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="{Binding Description}"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       FontSize="12"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                <Button Content="Open Themes Folder"
                        Command="{Binding OpenThemesFolderCommand}"/>
                <Button Content="Refresh"
                        Command="{Binding RefreshThemesCommand}"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="Close"
                    HorizontalAlignment="Right"
                    Click="OnCloseClicked"/>
        </Grid>
    </Grid>
</Window>
