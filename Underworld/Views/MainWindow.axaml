<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Underworld.ViewModels"
    xmlns:local="using:Underworld.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dg="using:Avalonia.Controls"
    mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
    x:Class="Underworld.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/underworld-logo.ico"
    Width="1100" Height="700"
    Title="Underworld"
    ExtendClientAreaToDecorationsHint="True"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="40"
    SystemDecorations="None"
    TransparencyLevelHint="AcrylicBlur"
    Background="Transparent">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Border.Card">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style Selector="TextBlock.SectionHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentOrangeBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style Selector="Button.Primary">
            <Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,6"/>
        </Style>

        <Style Selector="Button.TitleBarButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource MutedTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        <Style Selector="Button.TitleBarButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource TitleBarHoverBrush}"/>
        </Style>
        <Style Selector="Button.TitleBarButton:pressed">
            <Setter Property="Background" Value="{DynamicResource TitleBarPressedBrush}"/>
        </Style>
        <Style Selector="Button.TitleBarButton.CloseButton:pointerover">
            <Setter Property="Background" Value="{DynamicResource DangerRedBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
        </Style>
    </Window.Styles>

    <Panel>
        <!-- Main Window Background -->
        <Border Background="{DynamicResource WindowBackgroundBrush}" />

        <!-- Custom Title Bar with integrated menu -->
        <Border Height="40" VerticalAlignment="Top" Background="{DynamicResource WindowBackgroundBrush}" 
                BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="0,0,0,1"
                PointerPressed="OnTitleBarPointerPressed"
                DoubleTapped="OnTitleBarDoubleTapped">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                <!-- Icon -->
                <Image Grid.Column="0" Source="/Assets/underworld-logo.ico" Width="20" Height="20" 
                       Margin="12,0,8,0" VerticalAlignment="Center" />
                
                <!-- Menu Bar -->
                
                <Menu Grid.Column="1" VerticalAlignment="Center" Background="Transparent">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Export Profile" Command="{Binding ExportProfileCommand}" CommandParameter="{Binding $parent[Window]}" />
                        <MenuItem Header="_Import Profile" Command="{Binding ImportProfileCommand}" CommandParameter="{Binding $parent[Window]}" />
                        <Separator />
                        <MenuItem Header="_Manage Data Folders..." Click="OnManageDataFoldersClicked" />
                        <MenuItem Header="Clear WAD Cache" Click="OnClearCacheClicked" />
                        <Separator />
                        <MenuItem Header="E_xit" Click="OnExitClicked" />
                    </MenuItem>
                    <MenuItem Header="_View">
                        <MenuItem Header="Dark Theme" Click="OnDarkThemeClicked" />
                        <MenuItem Header="Light Theme" Click="OnLightThemeClicked" />
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem Header="_About" Click="OnAboutClicked" />
                    </MenuItem>
                </Menu>

                <!-- Centered Title -->
                <TextBlock Grid.Column="2" Text="Underworld" FontSize="12" FontWeight="SemiBold" 
                           Foreground="{DynamicResource AccentOrangeBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" />

                <!-- Window Controls -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="0">
                    <Button Classes="TitleBarButton" Content="â”€" Click="OnMinimizeClicked" ToolTip.Tip="Minimize" />
                    <Button Classes="TitleBarButton" Content="â–¡" Click="OnMaximizeClicked" ToolTip.Tip="Maximize" />
                    <Button Classes="TitleBarButton CloseButton" Content="âœ•" Click="OnCloseClicked" ToolTip.Tip="Close" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <DockPanel Margin="8,48,8,8" LastChildFill="True">

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" Padding="8,6,8,-4" Background="{DynamicResource WindowBackgroundBrush}">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Command Line Arguments:" 
                               Foreground="{DynamicResource MutedTextBrush}"
                               VerticalAlignment="Center" />
                    <TextBox Width="400" 
                             Text="{Binding CommandLineArguments, Mode=TwoWay}"
                             Watermark="Additional arguments..."
                             VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="1"
                        Classes="Primary"
                        Content="Run Game â–¶"
                        Click="OnRunGameClicked"
                        VerticalAlignment="Center" />
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid RowDefinitions="0.4*,0.6*" RowSpacing="8" Background="{DynamicResource WindowBackgroundBrush}">
            <!-- Top: Engine / IWAD / Profile -->
            <Grid ColumnDefinitions="2*,2*,1.5*" ColumnSpacing="8">
                <!-- 1. Engine -->
                <Border Classes="Card">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <TextBlock Text="1. Engine" Classes="SectionHeader" />
                        <ListBox Grid.Row="1" Name="ExecutablesList" 
                                 ItemsSource="{Binding Executables}"
                                 SelectedItem="{Binding SelectedExecutable}"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="4">
                                        <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding Path}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Rename" Click="OnContextRenameClicked"/>
                                    <MenuItem Header="Open File Location" Click="OnContextOpenLocationClicked"/>
                                    <MenuItem Header="Delete" Click="OnContextDeleteClicked"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="6" Margin="0,8,0,0">
                            <Button Content="Add Engine..." 
                                    Command="{Binding AddExecutablesCommand}" 
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:MainWindow}}" />
                            <Button Content="Remove"
                                    Command="{Binding RemoveSelectedExecutableCommand}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 2. Base Game (IWAD) -->
                <Border Grid.Column="1" Classes="Card">
                    <Grid RowDefinitions="Auto,*,33">
                        <TextBlock Text="2. Base Game (IWAD)" Classes="SectionHeader" />
                        <ListBox Grid.Row="1" Name="IWADsList"
                                 ItemsSource="{Binding IWADs}"
                                 SelectedItem="{Binding SelectedIWAD}"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" Margin="4">
                                        <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource PrimaryTextBrush}"/>
                                        <TextBlock Text="{Binding Path}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- 3. Profile -->
                <Border Grid.Column="2" Classes="Card">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <TextBlock Text="3. Profile" Classes="SectionHeader" />
                        <ListBox Grid.Row="1" Name="ProfilesList"
                                 ItemsSource="{Binding Profiles}"
                                 SelectedItem="{Binding SelectedProfile}"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource PrimaryTextBrush}" Margin="4"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
                            <Button Content="New" Click="OnNewProfileClicked" />
                            <Button Content="Remove" Click="OnRemoveProfileClicked" />
                            <CheckBox Name="ProfileLockedCheckbox" 
                                      Content="Locked" 
                                      IsChecked="{Binding CurrentProfileLocked, Mode=TwoWay}" 
                                      IsEnabled="false" 
                                      VerticalAlignment="Center"
                                      Margin="4,0,0,0" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Middle: WAD lists -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,Auto,*"
                  ColumnSpacing="8">
                <!-- Available WADs -->
                <Border Classes="Card">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <TextBlock Text="Available WADs" Classes="SectionHeader" />
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="4" Margin="0,0,0,6">
                            <TextBox Name="WADFilterTextBox1" 
                                     Watermark="Filter..." 
                                     TextChanged="OnAvailableWADsFilterTextChanged"/>
                            <Button Grid.Column="1" Content="Clear" Click="OnClearAvailableWADsFilterClicked"/>
                        </Grid>

                        <dg:DataGrid Name="WADsDataGrid1" Grid.Row="2"
                                  ItemsSource="{Binding FilteredAvailableWads}"
                                  SelectionMode="Extended"
                                  AutoGenerateColumns="False"
                                  Background="{DynamicResource ControlBackgroundBrush}"
                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                  RowBackground="{DynamicResource ControlBackgroundBrush}"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource ControlBorderBrush}"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  DoubleTapped="OnAvailableWADsDoubleClicked">
                            <dg:DataGrid.Columns>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="WAD" Binding="{Binding DisplayName}" Width="2*"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Maps" Binding="{Binding HasMaps}" Width="Auto"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Path" Binding="{Binding Path}" Width="3*"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                    </Grid>
                </Border>

                <!-- Transfer buttons -->
                <StackPanel Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <Button Name="AddWadsButton" 
                            Content="ðŸ¢‚"
                            Width="60"
                            Click="OnAddWadsClicked"/>
                    <Button Name="RemoveWadsButton" 
                            Content="ðŸ¢€" 
                            Width="60"
                            Click="OnRemoveWadsClicked"/>
                </StackPanel>

                <!-- Selected WADs -->
                <Border Grid.Column="2" Classes="Card">
                    <Grid RowDefinitions="Auto,Auto,*">
                        <TextBlock Text="Selected WADs" Classes="SectionHeader" />
                        
                        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="4" Margin="0,0,0,6">
                            <TextBox Name="WADFilterTextBox2" 
                                     Watermark="Filter..." 
                                     TextChanged="OnSelectedWADsFilterTextChanged"/>
                            <Button Grid.Column="1" Content="Clear" Click="OnClearSelectedWADsFilterClicked"/>
                        </Grid>

                        <dg:DataGrid Name="WADsDataGrid2" Grid.Row="2"
                                  ItemsSource="{Binding FilteredSelectedWads}"
                                  SelectionMode="Extended"
                                  AutoGenerateColumns="False"
                                  Background="{DynamicResource ControlBackgroundBrush}"
                                  Foreground="{DynamicResource PrimaryTextBrush}"
                                  RowBackground="{DynamicResource ControlBackgroundBrush}"
                                  BorderThickness="1"
                                  BorderBrush="{DynamicResource ControlBorderBrush}"
                                  CanUserReorderColumns="True"
                                  CanUserResizeColumns="True"
                                  CanUserSortColumns="True"
                                  DoubleTapped="OnSelectedWADsDoubleClicked">
                            <dg:DataGrid.Columns>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="WAD" Binding="{Binding DisplayName}" Width="2*"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Maps" Binding="{Binding HasMaps}" Width="Auto"/>
                                <dg:DataGridTextColumn IsReadOnly="True" Header="Path" Binding="{Binding Path}" Width="3*"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        </DockPanel>
    </Panel>

</Window>
